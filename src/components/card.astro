---
import Icon from "../components/icon.astro";
---

<div>
    <div class="bg-white rounded-3xl max-w-[374px] mx-auto mb-5 lg:my-0">
        <div class="grid grid-cols-[auto,auto] px-6 pt-6">
            <p class="lg:text-2xl text-lg font-medium text-cape-cod">Партнер/Интегратор Amo CRM</p>
            <button class="w-14 h-14 flex items-center justify-center rounded-full border-2 border-gallery transition-all duration-300 text-firefly hover:text-emerald active:border-emerald disabled:text-oslo-gray disabled:border-oslo-gray focus-visible:text-emerald focus:text-emerald  focus:outline-none">
                <div>
                    <Icon
                    size="h-[14px] w-full"
                    name="arrow"
                    />
                </div>
            </button>
        </div>
        <div class="flex justify-end items-end pt-5 pb-6 px-6">
            <Icon
                size="h-[52px] w-[150px]"
                name={`hero-credeo`}
            />
        </div>
    </div>
</div>